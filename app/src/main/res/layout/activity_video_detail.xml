<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.VideoDetailActivity">
    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/gsyPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivBackground"
        >
    </com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gsyPlayer"
        >
    </ImageView>

    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gsyPlayer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        app:typeface="fz_l_gb"
        ></com.kt.ktapplication.view.AppTextView>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestion"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        ></TextView>

    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:typeface = "fz_db1_gb"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        ></com.kt.ktapplication.view.AppTextView>

     <TextView
         android:id="@+id/tvFavor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/ic_action_favorites_without_padding"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginLeft="20dp"
         android:layout_marginBottom="30dp"
         android:textColor="@color/white"
         android:gravity="center_vertical"
         android:padding="5dp"
         android:drawablePadding="2dp"
         ></TextView>

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvFavor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_action_share_without_padding"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawablePadding="2dp"
        ></TextView>
    <TextView
        android:id="@+id/tvReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_reply_nopadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvShare"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:text="缓存"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawablePadding="2dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvReply"
        android:drawableLeft="@drawable/action_download_cut"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawablePadding="2dp"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>