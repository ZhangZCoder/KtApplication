<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="@drawable/landing_background">
    <ImageView
        android:id="@+id/iv_icon_splash"
        android:layout_width="61dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_action_focus_white_no_margin"/>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tv_name_english"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@id/iv_icon_splash"
        android:textSize="25sp"
        android:text="Eyepetizer"
        app:typeface = "lobster"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_name_english"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="开  眼"/>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tv_english_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:text="Daily appetizers for your eyes，Bon eyepetit"
        android:layout_above="@+id/tv_intro"
        app:typeface = "lobster"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="每日精选视频推介，让你大开眼界。"
        android:layout_marginBottom="46dp"
        android:id="@+id/tv_intro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>