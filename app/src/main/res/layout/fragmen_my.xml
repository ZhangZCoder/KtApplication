<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_user"
        ></ImageView>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivPhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="点击登录"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:typeface = "fz_db1_gb"
        ></com.kt.ktapplication.view.AppTextView>
    <TextView
        android:id="@+id/tvLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_grey_heart"
        app:layout_constraintRight_toLeftOf="@id/vLine"
        app:layout_constraintTop_toTopOf="@id/vLine"
        android:text="收藏"
        android:drawablePadding="5dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        ></TextView>
    <View
        android:id="@+id/vLine"
        android:background="@color/gray"
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin"
        android:layout_marginTop="20dp"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_reply_grey_without_padding"
        app:layout_constraintLeft_toRightOf="@id/vLine"
        app:layout_constraintTop_toTopOf="@id/vLine"
        android:layout_marginLeft="40dp"
        android:text="评论"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        ></TextView>
    <View
        android:id="@+id/vLineH"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        android:background="@color/gray"
        ></View>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvCache"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/vLineH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:text="我的缓存"
        app:typeface="fz_db1_gb"
        android:layout_marginTop="80dp"
        ></com.kt.ktapplication.view.AppTextView>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvWatch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvCache"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:text="观看记录"
        app:typeface="fz_db1_gb"
        ></com.kt.ktapplication.view.AppTextView>
    <com.kt.ktapplication.view.AppTextView
        android:id="@+id/tvAdvise"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvWatch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:text="意见反馈"
        app:typeface="fz_db1_gb"
        ></com.kt.ktapplication.view.AppTextView>
</androidx.constraintlayout.widget.ConstraintLayout>